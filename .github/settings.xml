<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              https://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>

        <!-- Starburst Maven Snapshot Repository -->
        <server>
            <id>starburstdata-sep.snapshots</id>
            <username>${env.mavenSnapshotsUsername}</username>
            <password>${env.mavenSnapshotsPassword}</password>
            <configuration>
                <httpConfiguration>
                    <all>
                        <usePreemptive>true</usePreemptive>
                    </all>
                </httpConfiguration>
            </configuration>
        </server>

        <!-- Starburst Maven Release Repository -->
        <server>
            <id>starburstdata-sep.releases</id>
            <username>${env.mavenReleaseUsername}</username>
            <password>${env.mavenReleasePassword}</password>
            <configuration>
                <httpConfiguration>
                    <all>
                        <usePreemptive>true</usePreemptive>
                    </all>
                </httpConfiguration>
            </configuration>
        </server>

    </servers>
</settings>
