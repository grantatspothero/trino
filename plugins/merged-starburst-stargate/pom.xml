    <parent>
        <groupId>com.starburstdata.presto</groupId>
        <artifactId>starburst-presto-root</artifactId>
        <version>347-e-SNAPSHOT</version>
        <relativePath>../..</relativePath>
    </parent>

    <artifactId>starburst-presto-connector</artifactId>
    <description>Starburst Presto - Presto-Presto Connector</description>
