        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.basepom.maven</groupId>
                    <artifactId>duplicate-finder-maven-plugin</artifactId>
                    <configuration>
                        <exceptions>
                            <exception>
                                <conflictingDependencies>
                                    <dependency>
                                        <groupId>net.snowflake</groupId>
                                        <artifactId>snowflake-jdbc</artifactId>
                                    </dependency>
                                    <dependency>
                                        <groupId>com.amazonaws</groupId>
                                        <artifactId>aws-java-sdk-s3</artifactId>
                                    </dependency>
                                </conflictingDependencies>
                                <resources>
                                    <resource>mime.types</resource>
                                </resources>
                            </exception>
                            <exception>
                                <conflictingDependencies>
                                    <dependency>
                                        <groupId>net.snowflake</groupId>
                                        <artifactId>snowflake-jdbc</artifactId>
                                    </dependency>
                                    <dependency>
                                        <groupId>org.apache.httpcomponents</groupId>
                                        <artifactId>httpclient</artifactId>
                                    </dependency>
                                </conflictingDependencies>
                                <resources>
                                    <resource>mozilla/public-suffix-list.txt</resource>
                                </resources>
                            </exception>
                        </exceptions>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>**/TestDistributedSnowflakeDistributedQueries.java</exclude>
                                <exclude>**/TestDistributedSnowflakeIntegrationSmokeTest.java</exclude>
                                <exclude>**/TestDistributedSnowflakeTypeMapping.java</exclude>
                                <exclude>**/TestJdbcSnowflakeDistributedQueries.java</exclude>
                                <exclude>**/TestJdbcSnowflakeIntegrationSmokeTest.java</exclude>
                                <exclude>**/TestJdbcSnowflakeTypeMapping.java</exclude>
                                <exclude>**/TestDistributedSnowflakeOktaIntegrationSmokeTest.java</exclude>
                                <exclude>**/TestDistributedSnowflakeOktaRoleIntegrationSmokeTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>jdbc-integration-tests</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>**/TestJdbcSnowflakeDistributedQueries.java</include>
                                <include>**/TestJdbcSnowflakeIntegrationSmokeTest.java</include>
                                <include>**/TestJdbcSnowflakeTypeMapping.java</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>distributed-integration-tests</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>**/TestDistributedSnowflakeDistributedQueries.java</include>
                                <include>**/TestDistributedSnowflakeIntegrationSmokeTest.java</include>
                                <include>**/TestDistributedSnowflakeTypeMapping.java</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>okta-integration-tests</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>**/TestDistributedSnowflakeOktaIntegrationSmokeTest.java</include>
                                <include>**/TestDistributedSnowflakeOktaRoleIntegrationSmokeTest.java</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>all-tests</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes combine.self="override" />
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
